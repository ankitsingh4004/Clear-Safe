<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#039BE5" />
            <stroke
                android:width="1dp"
                android:color="#B3E5FC" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#039BE5"
                android:endColor="#B3E5FC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B3E5FC" />

        </shape>
    </item>
</selector>