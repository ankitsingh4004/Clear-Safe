<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_asset"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="7dp"
        app:cardMaxElevation="10dp"
        >
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/card_border">
            <LinearLayout
                android:id="@+id/lL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text="PO No."
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/po_no"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:fontFamily="serif"
                    android:text="Water Pump"
                    android:textColor="@color/black"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Client PO No."
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/client_po_number"
                    android:layout_width="100dp"
                    android:fontFamily="serif"
                    android:layout_height="35dp"
                    android:text=""
                    android:textColor="@color/black"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text="Status"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/status1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:fontFamily="serif"
                    android:text="Ahuja Pvt Ltd."
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lL6"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/lL2">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text="Description"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/descrption"
                    android:layout_width="175dp"
                    android:fontFamily="serif"
                    android:layout_height="35dp"
                    android:text=""
                    android:textColor="@color/black"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/lL1"
                android:layout_marginTop="73dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:fontFamily="serif"
                    android:layout_height="25dp"
                    android:text="Date Raised"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/raised"
                    android:fontFamily="serif"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:textColor="@color/black"  />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>