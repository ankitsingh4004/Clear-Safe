<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firstcard"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/img_attachment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_assignment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="125dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_inflate_work_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="work order number"
                android:textColor="#000"
                android:textIsSelectable="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_inflate_synchronized_place_work"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=""
                android:textColor="#000"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:id="@+id/tv_inflate_synchronized_date"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="3 Feb 2019 10:00"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="12sp" />

         <!--   <TextView
                android:id="@+id/tv_inflate_synchronized_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm" />-->
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_iflate_synchronized_direction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_location_direction"
            />

    </FrameLayout>

</android.support.v7.widget.CardView>
