<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_client_list"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="7dp"
        app:cardMaxElevation="4dp"
        >
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/card_border">
            <LinearLayout
                android:id="@+id/lL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="WO ID"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/workOrder_Id"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:fontFamily="serif"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Status"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/status_client"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Assigned Name"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/assigned_name"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/lL3"
                android:layout_alignTop="@+id/lL6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Date Raised"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/date_raised"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/lL1"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Asset  Name"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:id="@+id/asset_name"
                    android:layout_width="100dp"
                    android:fontFamily="serif"
                    android:layout_height="35dp"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lL6"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/lL7"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="WO NO."
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/workOrderNumber"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:fontFamily="serif"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lL7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/lL1"
                android:layout_marginTop="73dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="Client Name"
                    android:fontFamily="serif"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/client_name"
                    android:layout_width="100dp"
                    android:fontFamily="serif"
                    android:layout_height="35dp"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>