<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firstcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/img_attachment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_assignment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="125dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_inflate_work_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="work order number"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_inflate_synchronized_place_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:textColor="#4CAF50"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="40dp"
                >

                <TextView
                    android:id="@+id/tv_inflate_synchronized_date"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="3 Feb 2019 10:00"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <!--   <TextView
                       android:id="@+id/tv_inflate_synchronized_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="10:00 pm" />-->
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_iflate_synchronized_direction"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_location_direction"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Client Name - "
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"

                android:textSize="16sp" />


            <TextView
                android:id="@+id/clientname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:textSize="15sp" />

            <!--    <ImageView
                    android:id="@+id/iv_site_location_direction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_location_direction"
                    />-->


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Order Type - "
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"

                android:textSize="16sp" />


            <TextView
                android:id="@+id/ordertype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:textSize="15sp" />

            <!--    <ImageView
                    android:id="@+id/iv_site_location_direction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_location_direction"
                    />-->


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Priority - "
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"

                android:textSize="16sp" />


            <TextView
                android:id="@+id/priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:textSize="15sp" />

            <!--    <ImageView
                    android:id="@+id/iv_site_location_direction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_location_direction"
                    />-->


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Order Status - "
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"

                android:textSize="16sp" />


            <TextView
                android:id="@+id/workOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:textSize="15sp" />

            <!--    <ImageView
                    android:id="@+id/iv_site_location_direction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_location_direction"
                    />-->


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Warning Level - "
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"

                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/warningtext"
                android:textColor="#000"
                android:layout_marginLeft="37dp"

                android:textSize="16sp" />

            <ImageView
                android:id="@+id/warning"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_warning_black1_24dp"
                />

            <!--    <ImageView
                    android:id="@+id/iv_site_location_direction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_location_direction"
                    />-->


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
