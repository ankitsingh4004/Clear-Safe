<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_bottom_dialog"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dp"
    android:elevation="16dp"
    android:outlineProvider="bounds"
    android:clipToPadding="false"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Suspended automated matching for this Site?"
        android:layout_gravity="center"

        android:layout_marginTop="10dp"
        />
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6D5D5"/>
    <ListView
        android:id="@+id/rv_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:choiceMode="singleChoice"
        android:fadeScrollbars="false"
        android:layout_marginBottom="5dp"
        android:listSelector="@color/item"
        />
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6D5D5"/>
    <TextView
        android:id="@+id/tv_suspend_minute"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Suspended for(Mins)?"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        />
    <View
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6D5D5"/>

    <TextView
        android:id="@+id/tv_bottom_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="Cancel"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:textColor="#FF5722"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</LinearLayout>