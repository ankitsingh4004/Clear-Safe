<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/lL7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="WO NO."
                        android:layout_marginBottom="5dp"

                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/work_order_no"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="011"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lL3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:layout_marginBottom="5dp"

                        android:text="Client Name"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/client_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Ahuja Pvt Ltd."
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lL4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Due Date"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/due_date"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="2017-11-27"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Status"
                        android:layout_marginBottom="5dp"

                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="0"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lL2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Warning Level"
                        android:layout_marginBottom="5dp"

                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/warning"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:fontFamily="serif"
                        android:text="Rahul Kumar"
                        android:textColor="@color/black" />
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/lL6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Priority"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/priority"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="017"

                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/lL5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:fontFamily="serif"
                        android:text="Description"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Water Pump"
                        android:textColor="@color/black" />


                </LinearLayout>
                <LinearLayout
                    android:id="@id/lL8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/rl"
                 >

                    <ImageButton
                        android:id="@+id/materialused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        app:srcCompat="@drawable/ic_assignment_turned_in_black_24dp"
                        android:visibility="gone" />
                    <ImageButton
                        android:id="@+id/addWorker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/workerlist"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/updateworkOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addWorker"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        app:srcCompat="@drawable/edit" />

                    <ImageButton
                        android:id="@+id/deleteWorkOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/updateworkOrder"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        app:srcCompat="@drawable/delete" />
                    <ImageButton
                        android:id="@+id/histroyWorkOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/deleteWorkOrder"
                        android:layout_marginLeft="10dp"
                        android:background="#fff"
                        app:srcCompat="@drawable/ic_history_black_24dp" />
                </LinearLayout>



            </LinearLayout>







        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>