<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:scrollbars="none"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:id="@+id/rel"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/img_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-medium"
                    android:text="k"

                    />
                <TextView
                    android:id="@+id/tv_doc"
                    style="@style/LargeText15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/iv_doc_download"
                    android:layout_toRightOf="@+id/img_attachment"
                    android:text="30-" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_toLeftOf="@+id/iv_doc_download"
                    android:layout_toRightOf="@+id/img_attachment"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/d"
                    android:layout_gravity="right|center_vertical"
                    >
                <TextView
                    android:id="@+id/tv_doc_name"
                    style="@style/LargeText15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_marginRight="70dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="5dp"
                    android:text="30-414d.pdf" />
                    <TextView
                        android:id="@+id/tv_signed_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned"
                        android:textColor="#4CAF50"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="right"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/iv_doc_download"
                android:layout_toRightOf="@+id/img_attachment"
                android:visibility="visible"
                android:layout_below="@+id/d"
                >
                <TextView
                    android:id="@+id/tv_doc_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:text="03-12-2018" />

                <Button
                    android:id="@+id/btn_doc_open"
                    android:layout_alignParentRight="true"
                    style="@style/BlueButton"
                    android:layout_marginRight="2dp"
                    android:text="Open" />

                <!-- <ImageView
                     android:id="@+id/iv_doc_download"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     app:srcCompat="@drawable/ic_file_download"

                     />-->


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="2dp"
                >


            </LinearLayout>
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>









</android.support.v4.widget.NestedScrollView>
